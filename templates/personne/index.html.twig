{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}
    <aside class="col-xs-12 col-3">

    </aside>
    <div data-controller="counter"></div>
<div class="row">
    {%  for personne in personnes %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">

            <h5 class="card-title">{{ personne.name | capitalize }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ personne.name | capitalize }} {{ personne.firstname | capitalize }}</h6>
            <p class="card-text">Age : {{ personne.age }} </p>
            <a href="{{ path('personne.detail', {id: personne.id}) }}" class="card-link"><i class="fa-solid fa-circle-info"></i></a>
            <a href="{{ path('personne.delete', {id: personne.id}) }}" class="card-link"> <i class="fa-solid fa-trash-can"></i></a>
            <a href="{{ path('personne.edit', {id: personne.id}) }}" class="card-link"> <i class="fa-solid fa-user-pen"></i></a>
        </div>
    </div>

    {% endfor %}
</div>
    {%  if isPaginated is defined and isPaginated%}
        <div class="row">
            <nav aria-label=" col Page navigation example">
                <ul class="pagination justify-content-center">
                    {% if page != 1 %}
                    <li class="page-item">
                        <a class="page-link" href=" {{ path('personne.list.alls', {page: page -1, nbre: nbre}) }}">Previous</a>
                    </li>
                        {% endif %}
                    {% for i in range(1, nbrePage)%}
                    <li class="page-item"><a class="page-link" href="{{ path('personne.list.alls', {page: i, nbre: nbre}) }}">{{ i }}</a></li>
                    {% endfor %}
                    {% if page != nbrePage %}
                        <li class="page-item">
                            <a class="page-link" href=" {{ path('personne.list.alls', {page: page +1, nbre: nbre}) }}">Next</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>

    {% endif %}
{% endblock %}

